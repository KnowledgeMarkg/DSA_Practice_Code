package com.KodnestArray;

public class BinarySearchInArray {

	public static void main(String[] args) {
		int[] arr = {22, 33, 55, 66, 77, 99};
		int searchEle = 33;
		
		int low= 0; 
		int high = arr.length-1;
		int mid = (low+high)/2;
		
		while(low <= high) {
			if(searchEle == arr[mid]) {
				System.out.println("The Element "+searchEle +"is found in index " +mid);
			}else if(searchEle < arr[mid]) {
				high = mid-1;
				mid = (low+high)/2;
			}else if(searchEle > arr[mid]) {
				low = mid+1; 
				mid = (low+high)/2;
			}
		}
	}

}
